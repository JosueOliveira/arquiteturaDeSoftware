<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="hibernate.connection.url">jdbc:hsqldb:hsql://127.0.0.1/sisbli</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="hbm2ddl.auto">update</property>
		<mapping class="br.com.ctup.arquitetura.sisbli.modelo.dominio.Mutuario"/>
		<mapping class="br.com.ctup.arquitetura.sisbli.modelo.dominio.Aluno"/>
		<mapping class="br.com.ctup.arquitetura.sisbli.modelo.dominio.Professor"/>
		<mapping class="br.com.ctup.arquitetura.sisbli.modelo.dominio.Livro"/>
		<mapping class="br.com.ctup.arquitetura.sisbli.modelo.dominio.Multa"/>
		<mapping class="br.com.ctup.arquitetura.sisbli.modelo.dominio.Emprestimo"/>
		
		
		
    </session-factory>
</hibernate-configuration>
